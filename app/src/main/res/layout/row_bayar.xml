<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#7ec0ee"
    android:padding="5dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="1dp"
        app:cardCornerRadius="7dp"
        android:layout_margin="3dp">

        <LinearLayout
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_margin="7dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/listRusakBayar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kerusakan"
                android:textColor="#000"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/listNoBayar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/listBiaya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Biaya Perbaikan : Rp. "
                android:textColor="#000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/listTglBayar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="right"
                android:text="Tanggal Servis"
                android:textColor="#000"
                android:textSize="12sp"
                android:textStyle="italic|bold" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>